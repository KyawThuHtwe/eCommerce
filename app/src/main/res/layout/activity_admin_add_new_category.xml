<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminAddNewCategoryActivity">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back"
            android:scaleType="centerCrop"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorWhite" />
        <TextView
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="@string/add_new_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/colorBottomBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/category_image"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/image_frame_background"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <Button
        android:id="@+id/uploadImage"
        android:textAllCaps="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/corner_solid_background"
        android:text="@string/upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <EditText
        android:id="@+id/category"
        android:hint="Category Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textSize="16sp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/add_new_category"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:text="Add"
        android:background="@drawable/corner_solid_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>