<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sellers.SellerRegistrationActivity">
    <ImageView
        android:background="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/seller_title"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="#FB8C00"
        android:text="@string/seller_registration_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/seller_name"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="Name..."
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/seller_phone"
        android:textSize="16sp"
        android:inputType="number"
        android:hint="Phone..."
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/seller_email"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:hint="Email..."
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/seller_password"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="Password..."
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/seller_address"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="Shop-Business Address..."
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/seller_register"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="@string/register"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/seller_register_already_account"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="@string/already_have_an_account_login"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/corner_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>