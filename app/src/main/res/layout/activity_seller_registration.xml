<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sellers.SellerRegistrationActivity">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorWhite" />
        <TextView
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="@string/g_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/online_store_header"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/seller_title"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#FB8C00"
                    android:text="@string/seller_registration_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <EditText
                android:id="@+id/seller_name"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="Name..."
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_border_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:id="@+id/seller_phone"
                android:textSize="16sp"
                android:inputType="phone"
                android:hint="Phone..."
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_border_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:id="@+id/seller_email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:hint="Email..."
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_border_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/seller_password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:hint="Password..."
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_border_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/seller_address"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="Shop-Business Address..."
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_border_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/seller_register"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="@string/register"
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/corner_solid_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/seller_register_already_account"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="@string/already_have_an_account_login"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/corner_solid_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>