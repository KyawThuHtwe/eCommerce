<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Fragments.AdminHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logo"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/online_store_header"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="30dp"
                        android:contentDescription="@string/app_name" />
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="@id/logo"
                        app:layout_constraintTop_toBottomOf="@id/logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cardElevation="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/add_new_product"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:tint="@color/colorWhite" />
                                <TextView
                                    android:textSize="16sp"
                                    android:padding="10dp"
                                    android:textColor="@color/colorWhite"
                                    android:text="@string/add_new_product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/seller"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/account_circle"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/sellers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/user"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/account_circle"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/users"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/maintain"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/edit_attributes"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/maintain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/approve"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/notifications"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/approve"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/order"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/order"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/orders"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/category"
                            android:padding="20dp"
                            android:orientation="vertical"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/add"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:tint="#43A047"
                                android:contentDescription="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="@string/category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>